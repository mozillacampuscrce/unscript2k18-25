<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backcolor"
    android:weightSum="30"
    android:orientation="vertical"
    tools:context="com.example.ht.unscript.DashBoard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.v7.widget.CardView
                android:id="@+id/profile"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/pothole">

                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/profile"/>

                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/textcolor"
                    android:text="Profile"/>



            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/chat"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/garbage">

                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/chat"/>

                <TextView
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/textcolor"
                    android:text="Chat"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.v7.widget.CardView
                android:id="@+id/attendannce"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/complaints">

                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/att"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:text="Attendance"
                    android:textColor="@color/textcolor"
                    android:textSize="20sp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/registercomplaint"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/coming1">

                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:src="@drawable/dashboardcomplaints"/>

                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/textcolor"
                    android:text="Register Complaint"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.v7.widget.CardView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:id="@+id/results"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/coming2">

                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:src="@drawable/result"/>

                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/textcolor"
                    android:text="Results"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/watsoncard"
                app:cardBackgroundColor="@color/coming3">

                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:src="@drawable/watson"/>

                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/textcolor"
                    android:text="Bot"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
